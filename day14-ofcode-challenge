print("Player 1 and Player 2, please enter your choice: R for Rock, P for Paper, S for Scissors")

# Get inputs from players without showing their choices
player_1 = input("Player 1, enter your choice: ").upper()
player_2 = input("Player 2, enter your choice: ").upper()

# Validate inputs and determine the winner
if player_1 == player_2:
    print("It's a tie! ğŸ˜… Both players chose", player_1)
elif player_1 == "R":
    if player_2 == "S":
        print("Player 1 wins! ğŸ‰ Rock beats Scissors")
    else:
        print("Player 2 wins! ğŸ‰ Paper beats Rock")
elif player_1 == "P":
    if player_2 == "R":
        print("Player 1 wins! ğŸ‰ Paper beats Rock")
    else:
        print("Player 2 wins! ğŸ‰ Scissors beats Paper")
elif player_1 == "S":
    if player_2 == "P":
        print("Player 1 wins! ğŸ‰ Scissors beats Paper")
    else:
        print("Player 2 wins! ğŸ‰ Rock beats Scissors")
else:
    print("Invalid input! Please choose R, P, or S.")